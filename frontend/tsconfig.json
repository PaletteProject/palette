{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "../",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "lib": ["dom", "ESNext"],
    "types": ["node", "react", "vite/client", "vitest"],
    "resolveJsonModule": true,
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "include": ["src", "vite.config.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
