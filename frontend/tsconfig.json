{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "types": ["node", "express", "react", "vite/client", "jest"]
  },
  "include": ["src", "vite.config.ts", "src/**/*.test.ts", "src/**/*.test.tsx"],
  "exclude": ["node_modules"]
}
