{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceRoot": "./src",
    "rootDir": "../",
    "baseUrl": "./",
    "paths": {
      "@controllers": ["src/controllers"],
      "@middleware": ["src/middleware"],
    },
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node", "express", "@prisma/client", "jest"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/prisma/**"]
}
